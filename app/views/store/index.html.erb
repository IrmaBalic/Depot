<div id="products_sale">
	<div id="main-header"><%= t :new %></div>
	<div id="latest_products">
	<% cache ['store', Product.latest] do %>
		<% @products.each do |product| %>
			<% cache ['entry', product] do %>
				<div class="entry">
					<a href="<%= product_path(product) %>"><%= image_tag(product.image_url) %></a>
					<div class="price_line">
						<div class="title"><%= product.title %></div>
						<span class="price"><%= product.price %> KM </span>
					</div>
					<% unless session[:role] == 'Admin' %>
					<div id="entry-button">
						<%= button_to t('add_to_cart'), line_items_path(product_id: product), remote: true, class: 'cart_button', class: 'cart_button_buy' %>
					<div class="cart_button_loading"></div>	
					</div>
					<%end%>
				 	</div>
			<% end %>
		<% end %>
	<% end %>
	</div>
	
</div>