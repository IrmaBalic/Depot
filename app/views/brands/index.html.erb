
<div id="title"> Brands </div>
<div class="container" style="padding-left:280px; padding-right:280px;">
<div class="table-responsive"> 
  <table class="table table-striped table-bordered table-hover table-condensed" style="margin-top: 20px;">
    <thead>
      <tr>
        <th>Name </th>
        <th colspan="2"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
        <tr>
          <td><%= brand.name %></td>
          <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
          <td><%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to '+ Add new brand', new_brand_path %>

</div>
