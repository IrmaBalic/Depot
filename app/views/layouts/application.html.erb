<!DOCTYPE html>
<html>
<head>
  <title>ABHTech</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body class='<%= controller.controller_name%>'>
<div id="home-slider">
	
<nav class="navbar navbar-default" id="header" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
          <%= link_to 'abhTech', store_path, :class => 'navbar-brand' %>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <a href="<%=cart_path(@cart) %>"><div class="basket_xs"></div></a>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if session[:role] == 'Admin' %>
			<li><%= link_to 'PRODUCTS', products_path %></li> 
			<li><%= link_to 'ROLES', roles_path %></li> 
			<li><%= link_to 'USERS', users_path %></li>
			<li><%= link_to 'CATEGORIES', categories_path %></li>
		<% else %>
		  <% @categories.each do |category| %>
			<li><%= link_to category.name, category_path(category) %></li> 
		  <% end %>
		<% end %>
      </ul>
      	<ul class="nav navbar-nav navbar-right hidden-xs" id="languages">
			<li><%= link_to 'EN', store_path(:locale => 'en') %></li>
			<li><%= link_to 'BS', store_path(:locale => 'bs') %></li>
		</ul>
      <ul class="nav navbar-nav navbar-right">
        <% if session[:user_id]  %>
	        <li class="dropdown hidden-xs">
	          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
	          	<%= @user.name %>
	          	<span class="caret"></span>
	          </a>
	          <ul class="dropdown-menu" role="menu">
	            <li class="dropdown-li"><%= link_to t('history'), purchuase_users_path %></li>  
	          </ul>
	        </li>
	        <li class="signout_li"><%= button_to 'LOGOUT', signout_path, method: :delete, :class => "btn btn-default navbar-btn sign_out" %></li>
		<% else %>
			<li><%= link_to 'LOGIN', signin_path %></li>
			<li><%= link_to 'REGISTER', new_user_path %></li>
        <% end %>
		<% unless session[:role] == 'Admin' %>
			<a href="<%=cart_path(@cart) %>"><div class="basket hidden-xs"></div></a>
			<div id="cart" class="hidden-xs"><%= @cart.number_of_items %></div>
		<% end %>
		</ul>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
</div>
	<div id="main">
		<%= yield %>
	</div>
<div id="footer">
	Copyright abhTech. All rights reserved.
	<div id="menu">
		<ul>
			<% if session[:role] == 'Admin' %>
				<li><%= link_to 'PROIZVODI', products_path %></li> 
				<li><%= link_to 'PRIVILEGIJE', roles_path %></li> 
				<li><%= link_to 'KORISNICI', users_path %></li>
				<li><%= link_to 'KATEGORIJE', categories_path %></li>
			<% else %>
				<% @categories.each do |category| %>
					<li><%= link_to category.name, category_path(category) %></li> 
				<% end %>
			<% end %>
		</ul>
	</div>
</div>
</body>
</html>
<script type="text/javascript">
  var locale = "<%= I18n.locale %>";
</script>