<% if flash[:notice] %>
  <div class="warning warning-success" style="color:rgba(57, 128, 221, 0.87);text-align:center;">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="warning warning-error" style="color:#dd4b39;text-align:center;">
    <%= flash[:alert] %>
  </div>
<% end %>

<!--<div id="title"> Users </div>-->
<div class="container">
<div class="table-responsive"> 
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Role</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
          <%if user.role %> 
              <td><%= user.role.name %></td>
              <td><%= user.name %></td>
              <td><%= user.surname %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to '+ Add new user', new_user_path %>

</div>
