<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id="section_title"><%= t('registration') %>
  <% unless session[:role] == "Admin" %>
    <div id="register_link"><%= link_to t('user_login'), signin_path %></div>
  <% end %>
</div>
  <div id="input_form">
    <% if session[:role] == "Admin" %>
      <div class="field">
        <%= label :role_id, "Rola" %><br>
        <%= select_tag(:role, options_for_select(Role.dropdown_options, -1)) %>
      </div>
    <%end%>
      <div class="field">
        <%= f.label :name, t('name') %><br>
        <%= f.text_field :name, :autofocus=>true %>
      </div>
      <div class="field">
        <%= f.label :surname, t('surname') %><br>
        <%= f.text_field :surname %>
      </div>
      <div class="field">
        <%= f.label :email, "Email" %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :password, t('password') %><br>
        <%= f.password_field :password_digest %>
      </div>

      <div class="actions">
      <% if session[:role] == "Admin" %>
        <%= f.submit "Submit" %>
      <% else %>
        <%= f.submit "REGISTER" %>
      <% end %>
      </div>
  </div>

<% end %>
