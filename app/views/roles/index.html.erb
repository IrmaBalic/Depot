
<!--<div id="title"> Roles </div>-->
<% if flash[:notice] %>
  <div class="warning warning-success" style="color:rgba(57, 128, 221, 0.87);text-align:center;">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="warning warning-error" style="color:#dd4b39;text-align:center;">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="container" style="padding-left:280px; padding-right:280px;">
<div class="table-responsive"> 
  <table class="table table-striped table-bordered table-hover table-condensed" style="margin-top: 20px;">
    <thead>
      <tr>
        <th>Name </th>
        <th colspan="2"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= link_to 'Edit', edit_role_path(role) %></td>
          <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to '+ Add new role', new_role_path %>

</div>
