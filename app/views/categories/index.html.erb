
<div id="table_index">
<table>
  <thead>
    <tr>
      <th>Ime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Ažuriraj', edit_category_path(category) %></td>
        <td><%= link_to 'Obriši', category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<%= link_to '+ Nova kategorija', new_category_path %>

</div>
