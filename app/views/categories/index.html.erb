

<div id="table_index">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |categorie| %>
      <tr>
        <td><%= categorie.name %></td>
        <td><%= link_to 'Show', categorie %></td>
        <td><%= link_to 'Edit', edit_category_path(categorie) %></td>
        <td><%= link_to 'Destroy', categorie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<%= link_to 'New Category', new_category_path %>

</div>
<br>
