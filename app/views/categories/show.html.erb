  <div id="section_title"> <%= @categorie.name %></div>

<div id="products_list">
  <% @products.each do |product| %>
  <% if product.categorie == @categorie %>
      <div class="entry">
      <a href="<%= product_path(product) %>">
        <%= image_tag(product.image_url) %></a>
        <div class="price_line">
          <div id="title"><%= product.title %></div>
          <span class="price"><%= number_to_currency(product.price) %></span>
        </div>
          <% if session[:role] != 'Admin' %>
              <%= button_to 'U KORPU', line_items_path(product_id: product), remote: true, class: 'cart_button' %>
          <% else %>
          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product_path(product)) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>     
      <% end %>
  <% end %>
</div>


