
<div id="products_list">
  <div id="category_name"> <%= @categorie.name %></div>
  <% @products.each do |product| %>
  <% if product.categorie == @categorie %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <div class="price_line">
          <div id="title"><%= product.title %></div>
          <span class="price"><%= number_to_currency(product.price) %></span>
        </div>
          <% if session[:role] != 'Admin' %>
            <div id="entry-button">
              <%= button_to 'U KORPU', line_items_path(product_id: product), remote: true, class: 'cart_button' %>
              <div class="buy_button"> <a href="#"> KUPI </a></div>
            </div>
          <% else %>
          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>     
      <% end %>
  <% end %>
</div>


