  <div id="section_title"> <%= @category.name %></div>

<div id="products_list">
  <% @category.products.each do |product| %>
      <div class="entry">
      <a href="<%= product_path(product) %>">
        <%= image_tag(product.image_url) %></a>
        <div class="price_line">
          <div class="title"><%= product.title %></div>
          <span class="price"><%= product.price %> KM </span>
        </div>
          <% if session[:role] != 'Admin' %>
              <%= button_to t('add_to_cart'), line_items_path(product_id: product), remote: true, class: 'cart_button' %>
          <% else %>
          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product_path(product)) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>     
  <% end %>
</div>


