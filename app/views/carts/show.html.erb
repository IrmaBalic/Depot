<div id="section_title"> <%= t('your_cart') %> </div>
<div class="container-fluid">
<div class="row">
	<div id="cart_frame"  class="col-xs-11 col-sm-11 col-md-7 col-lg-7">
	<div class="row">
	 <% @line_items.each do |line_item| %>
	  <% if line_item.cart == @cart %>
	  	<div id="cart_line_item" class="col-xs-11 col-sm-12 col-md-12 col-lg-12">
		  	<div class="row">
		  		<span class="title-xs visible-xs-block col-xs-11"><%= t('title') %>: <%= line_item.product.title %></span><br>
		  	</div>
		  	<div class="row">
				<div id="slika" class="col-xs-9 col-sm-3 col-md-3 col-lg-3">
					<%= image_tag(line_item.product.image_url) %>
				</div>	
				<div id="description" class="hidden-xs col-sm-7 col-md-7 col-lg-7">
					<span><%= t('title') %>: <%= line_item.product.title %></span><br>
					<span><%= t('description')%>: <%= sanitize(line_item.product.description) %></span>
				</div>
				<div id="price_details" class="col-xs-3 col-sm-2 col-md-2 col-lg-2">
					<span id="cijena"><%= t('price') %></span> <span class="price"><%= line_item.product.price %> KM</span><br><br>
					<span id="cijena"><%= t('quantity') %></span><span class="price"> <%=line_item.quantity %></span>
				</div>
			</div>
		</div>
	  <% end %>
	<% end %>
	</div>
	</div>
	<div id="purchuase" class="col-xs-12 col-sm-11 col-md-3 col-lg-3">
		<%= render(@cart) %>
		<% if @cart.number_of_items >0 %>
			<div id="entry-button">
				<%= button_to t('empty_cart'), @cart,  :class => 'leave_button', method: :delete, data: { confirm: 'Are you sure?' } %>
			    <div class="buy_button"> 
			    	<% if session[:user_id] and @user.shipping_addresses.any? %>
			    		<a href="<%=new_charge_url%>"><%= t('continue') %></a>
			    	<% else %>
			    		<a href="<%=new_address_url%>"><%= t('continue') %></a>
			    	<% end %>
			    </div>
			</div>
		<% end %>
	</div>
	</div>
</div>