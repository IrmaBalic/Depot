<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div id="input_form" style="margin-top: 15px;">

  <div class="field">
      <%= label :categorie_id, "Kategorija" %><br>
      <%= select_tag(:categorie, options_for_select(Categorie.dropdown_options, -1)) %>
    </div>
    <div class="field">
      <%= f.label :title, "Naziv" %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description, "Opis" %><br>
      <%= f.text_area :description, :rows => 6 %>
    </div>
    <div class="field">
      <%= f.label :image_url, "Slika" %><br>
      <%= f.text_field :image_url %>
    </div>
    <div class="field">
      <%= f.label :price, "Cijena" %><br>
      <%= f.text_field :price %>
    </div>
    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
    </div>
<% end %>
