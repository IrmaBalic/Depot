

<div id="products_list" style="margin-left: 300px;">
  <% @products.each do |product| %>
      <div class="entry">
        <%= image_tag(product.image_url) %>
        <div class="price_line">
          <div class="title"><%= product.title %></div>
          <span class="price"><%= number_to_currency(product.price) %></span>
        </div>
          <% if session[:role] != 'Admin' %>
            <div id="entry-button">
              <%= button_to 'U KORPU', line_items_path(product_id: product), remote: true, class: 'cart_button' %>
              <div class="buy_button"> <a href="#"> KUPI </a></div>
          </div>
          <% else %>
          <%= link_to 'Show', product_path(product) %>
        <%= link_to 'Edit', edit_product_path(product) %>
        <%= link_to 'Destroy', product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>   
      </div>
  <% end %>
</div>
